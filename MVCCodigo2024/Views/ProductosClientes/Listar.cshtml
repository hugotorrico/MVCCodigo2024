
@{
    ViewBag.Title = "Listar";
}
@model  MVCCodigo2024.Models.ProductoCliente

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
    }

    th, td {
        padding: 8px;
        text-align: left;
    }
</style>


<h2>Listar Productos</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in  ((MVCCodigo2024.Models.ProductoCliente)Model).Productos)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>@producto.Cantidad</td>
            </tr>
        }
    </tbody>
</table>


<h2>Listar Clientes</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombres</th>           
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in ((MVCCodigo2024.Models.ProductoCliente)Model).Clientes)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nombres</td>               
            </tr>
        }
    </tbody>
</table>